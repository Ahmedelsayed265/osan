{% extends "layout.jinja" %}

{% block header %} {% include 'header.jinja' %} {% endblock %}


{% block top_links %}
<link rel="stylesheet" href="{{ 'category-style.css?v=1.13' | asset_url }}">
{% endblock %}

{% block main_content %}

<div class="breadcrumb-subtitle">
    <section class="breadcrumb-section">
        <nav aria-label="breadcrumb">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item" aria-current="page">
                        <a href="/">{{ _("Home") }}</a>
                    </li>
                    <li class="breadcrumb-item active " aria-current="page">{{ _("all categories") }}</li>
                </ol>
            </div>
        </nav>
    </section>
    
    {% set title=_("all categories") %}{% include 'components/breadcrumb-subTitle-detail.jinja' %}
</div>

<div class="container">
    <div class="categories-grid">
        {% for category in categories %}
        <div class="categories-box">
            {% if category.image %}
            <a href="/categories/{{ category.id }}/{{ category.slug }}" class="content-img">
                <img loading="lazy" class="categories-image" src="{{ category.image }}"
                    alt="{{ category.img_alt_text }}">
            </a>
            {% endif %}

            <div id="accordion" class="category-content">
                <div class="header-category" id="heading{{ key }}">
                    <a href="/categories/{{ category.id }}/{{ category.slug }}" class="btn btn-link-categories">
                        <span>{{ category.name }}</span>
                    </a>
                </div>

                {% if category.sub_categories | length > 0 %}
                <div class="body-category">
                    {% for sub_category in category.sub_categories %}
                    <div class="categories-info">
                        <p class="categories-title">
                            <a href="categories/{{ sub_category.id }}/{{ sub_category.slug }}">
                                {{ sub_category.name }}
                            </a>
                        </p>

                        {% if sub_category.sub_categories | length > 0 %}
                        <ul class="categories-subTitle">
                            {% for subTwo_category in sub_category.sub_categories %}
                            <li>
                                <a href="categories/{{ subTwo_category.id }}/{{ subTwo_category.slug }}">
                                    {{ subTwo_category.name }}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}

{% block footer %} {% include 'footer.jinja' %} {% endblock %}