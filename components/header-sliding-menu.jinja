<div id="menu-logo" style="display:none;">
    <a href="/" class="logo-menu">
        {% set logoUrl = store.logo %}
        <img loading="lazy" class="menu-logo lazy-img" width="180" height="60" src="{{ image_url(logoUrl, h=175, q=100) }}" alt="{{ store.name }}">
    </a>

    <div class="store-icon">
        {% if not ('hide_search_bar' in menu_settings.header_options) %}
        <div class="search-box circle-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="24" height="24" color="#000000"
                fill="none">
                <path d="M17.5 17.5L22 22" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                    stroke-linejoin="round" />
                <path
                    d="M20 11C20 6.02944 15.9706 2 11 2C6.02944 2 2 6.02944 2 11C2 15.9706 6.02944 20 11 20C15.9706 20 20 15.9706 20 11Z"
                    stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" />
            </svg>
        </div>
        {% endif %}

        <div class="login-profile circle-icon">
            <button zid-visible-customer="true" type="button" class="user-btn"
                onclick="window.location.href='/account-profile'" aria-label="profile" id="hello-btn-alt">
                <img loading="lazy" class="lazy-img" src="{{ 'user.png' | asset_url }}" alt="user" width="24"
                    height="24">
            </button>

            <button zid-visible-guest="true" type="button" class="login-btn"
                onclick="window.location.href='/auth/login'" aria-label="login btn" id="login-btn-alt">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#000000"
                    fill="none">
                    <path
                        d="M22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12Z"
                        stroke="currentColor" stroke-width="1.5" />
                    <path
                        d="M14.75 9.5C14.75 11.0188 13.5188 12.25 12 12.25C10.4812 12.25 9.25 11.0188 9.25 9.5C9.25 7.98122 10.4812 6.75 12 6.75C13.5188 6.75 14.75 7.98122 14.75 9.5Z"
                        stroke="currentColor" stroke-width="1.5" />
                    <path
                        d="M5.49994 19.0001L6.06034 18.0194C6.95055 16.4616 8.60727 15.5001 10.4016 15.5001H13.5983C15.3926 15.5001 17.0493 16.4616 17.9395 18.0194L18.4999 19.0001"
                        stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </button>
        </div>

        {% if not ('hide_language' in menu_settings.header_options) %}
        <div class="language-currency-btn circle-icon" data-bs-toggle="modal" data-bs-target="#langCurrecyModal">
            {% if session.lang == 'en' %}
            {% set change_to_lang = 'ar' %}
            {% set change_to_lang_name = 'العربية' %}
            {% else %}
            {% set change_to_lang = 'en' %}
            {% set change_to_lang_name = 'English' %}
            {% endif %}
            <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="24" height="24" color="#000000"
                fill="none">
                <path
                    d="M22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22C17.5228 22 22 17.5228 22 12Z"
                    stroke="currentColor" stroke-width="1.5" />
                <path
                    d="M20 5.69899C19.0653 5.76636 17.8681 6.12824 17.0379 7.20277C15.5385 9.14361 14.039 9.30556 13.0394 8.65861C11.5399 7.6882 12.8 6.11636 11.0401 5.26215C9.89313 4.70542 9.73321 3.19045 10.3716 2"
                    stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" />
                <path
                    d="M2 11C2.7625 11.6621 3.83046 12.2682 5.08874 12.2682C7.68843 12.2682 8.20837 12.7649 8.20837 14.7518C8.20837 16.7387 8.20837 16.7387 8.72831 18.2288C9.06651 19.1981 9.18472 20.1674 8.5106 21"
                    stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" />
                <path
                    d="M22 13.4523C21.1129 12.9411 20 12.7308 18.8734 13.5405C16.7177 15.0898 15.2314 13.806 14.5619 15.0889C13.5765 16.9775 17.0957 17.5711 14 22"
                    stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" />
            </svg>
        </div>
        {% endif %}

        <button zid-visible-customer="true" type="button" class="wishlist-btn circle-icon"
            onclick="window.location.href='/account-wishlist'" aria-label="wishlist">
            <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="24" height="24" color="#000000"
                fill="none">
                <path
                    d="M19.4626 3.99415C16.7809 2.34923 14.4404 3.01211 13.0344 4.06801C12.4578 4.50096 12.1696 4.71743 12 4.71743C11.8304 4.71743 11.5422 4.50096 10.9656 4.06801C9.55962 3.01211 7.21909 2.34923 4.53744 3.99415C1.01807 6.15294 0.221721 13.2749 8.33953 19.2834C9.88572 20.4278 10.6588 21 12 21C13.3412 21 14.1143 20.4278 15.6605 19.2834C23.7783 13.2749 22.9819 6.15294 19.4626 3.99415Z"
                    stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
            </svg>
        </button>

        <button zid-visible-guest="true" type="button" class="wishlist-btn circle-icon"
            onclick="window.location.href='/auth/login'" aria-label="login btn">
            <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" width="24" height="24" color="#000000"
                fill="none">
                <path
                    d="M19.4626 3.99415C16.7809 2.34923 14.4404 3.01211 13.0344 4.06801C12.4578 4.50096 12.1696 4.71743 12 4.71743C11.8304 4.71743 11.5422 4.50096 10.9656 4.06801C9.55962 3.01211 7.21909 2.34923 4.53744 3.99415C1.01807 6.15294 0.221721 13.2749 8.33953 19.2834C9.88572 20.4278 10.6588 21 12 21C13.3412 21 14.1143 20.4278 15.6605 19.2834C23.7783 13.2749 22.9819 6.15294 19.4626 3.99415Z"
                    stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
            </svg>
        </button>

        <div class="cart-btn circle-icon">
            <a href="/cart/view" role="button" aria-label="cart">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#000000"
                    fill="none">
                    <path
                        d="M3.87289 17.0194L2.66933 9.83981C2.48735 8.75428 2.39637 8.21152 2.68773 7.85576C2.9791 7.5 3.51461 7.5 4.58564 7.5H19.4144C20.4854 7.5 21.0209 7.5 21.3123 7.85576C21.6036 8.21152 21.5126 8.75428 21.3307 9.83981L20.1271 17.0194C19.7282 19.3991 19.5287 20.5889 18.7143 21.2945C17.9 22 16.726 22 14.3782 22H9.62182C7.27396 22 6.10003 22 5.28565 21.2945C4.47127 20.5889 4.27181 19.3991 3.87289 17.0194Z"
                        stroke="currentColor" stroke-width="1.5" />
                    <path d="M17.5 7.5C17.5 4.46243 15.0376 2 12 2C8.96243 2 6.5 4.46243 6.5 7.5" stroke="currentColor"
                        stroke-width="1.5" />
                </svg>
                <span class="cart-badge">0</span>
            </a>
        </div>
    </div>

    <div zid-visible-customer="true" class="user-greeting" onclick="window.location.href='/account-profile'">
        <img loading="lazy" src="{{ 'user.png' | asset_url }}" alt="user-img" />

        <div class="user-info">
            <p class="user-name" id="customer-greeting-alt">{{ _("Hello") }}, {{customer.name}}</p>
            <p class="welcome-text">{{ _("Welcome back") }}</p>
        </div>
    </div>

    <div zid-visible-guest="true" class="user-greeting" onclick="window.location.href='/auth/login'">
        <img loading="lazy" src="{{ 'user.png' | asset_url }}" alt="user-img" />

        <div class="user-info">
            <p class="user-name">{{ _("Welcome") }}</p>
            <p class="welcome-text">{{ _("Login to your account") }}</p>
        </div>
    </div>

</div>

<div id="menu-secondary" class="secondary-menu-wrap" style="display:none;">
    <div class="links-bottom">
        <a href="/cart/view" role="button" aria-label="cart">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none"
                color="#747474" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                    d="M6.331 8h11.339a2 2 0 0 1 1.977 2.304l-1.255 8.152a3 3 0 0 1 -2.966 2.544h-6.852a3 3 0 0 1 -2.965 -2.544l-1.255 -8.152a2 2 0 0 1 1.977 -2.304z">
                </path>
                <path d="M9 11v-5a3 3 0 0 1 6 0v5"></path>
            </svg>
            <span class="cart-badge">0</span>
            {{ _("Cart") }}
        </a>
    </div>

    {% if not ('hide_country' in menu_settings.header_options) or not ('hide_language' in
    menu_settings.header_options)%}
    <div class="links-bottom">
        <div class="language-currency-btn" onclick="zidOpenRegionSettingDialog()">
            {% if session.lang == 'en' %}
            {% set change_to_lang = 'ar' %}
            {% set change_to_lang_name = 'العربية' %}
            {% else %}
            {% set change_to_lang = 'en' %}
            {% set change_to_lang_name = 'English' %}
            {% endif %}
            <div class="lang-currency-display">
                <img src="{{ session.country.flag }}" alt="{{ session.country.name }}" width="20" height="14">
                <span>{{ session.country.names[session.lang] }}</span>
                <em>|</em>
                <span>{{ change_to_lang_name }}</span>
            </div>
        </div>
    </div>
    {% endif %}
</div>

<nav id="sliding-menu" style="opacity: 0;position: fixed;">
    <ul class="list-menu">
        {% for menu in store.settings.menus.main_menu.items %}
            {% if menu.url %}
                <li class="slide-menu-ul-li {% if menu.slug == 'all_categories' %} all-categories {% endif %}" onclick="scrollToSubMenu(this)">
                    <a href="{{ menu.url | localized_url if menu.resource_type != 'url' else menu.url }}" title="{{ menu.label }}" class="menu-link" aria-label="{{ menu.label }}">
                        {% if menu.image_thumbnail %}
                        <img loading="lazy" src="{{ menu.image_thumbnail }}" alt="menu" width="42" height="42" class="menu-image lazy-img" />
                        {% endif %}
                        <span class="clickable-span">{{ menu.label }}</span>
                    </a>

                    {% if menu.items | length > 0 %}
                    <ul>
                        {% for menu_sub in menu.items %}
                        <li class="slide-menu-ul-li">
                            <a href="{{ menu_sub.url | localized_url if menu_sub.resource_type != 'url' else menu_sub.url }}"
                                aria-label="{{ menu_sub.label }}">
                                {% if menu_sub.image_thumbnail %}
                                <img loading="lazy" src="{{ menu_sub.image_thumbnail }}" alt="menu-sub" width="42" height="42"
                                    class="menu-image lazy-img" />
                                {% endif %}
                                <span class="clickable-span">{{ menu_sub.label }}</span>
                            </a>
                            
                            {% if menu_sub.items | length > 0 %}
                            <ul>
                                {% for menu_sub_sub in menu_sub.items %}
                                <li class="slide-menu-ul-li">
                                    <a href="{{ menu_sub_sub.url | localized_url if menu_sub_sub.resource_type != 'url' else menu_sub_sub.url }}"
                                        aria-label="{{ menu_sub_sub.label }}">
                                        {% if menu_sub_sub.image_thumbnail %}
                                        <img loading="lazy" src="{{ menu_sub_sub.image_thumbnail }}" alt="menu-sub-sub" width="42"
                                            height="42" class="menu-image lazy-img" />
                                        {% endif %}
                                        {{ menu_sub_sub.label }}
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</nav>